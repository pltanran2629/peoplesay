.swiper {
  height: 1150rpx;
}

swiper-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  /* justify-content: space-around; */
  width:650rpx ;
}

.main {
  width: 100%;
  margin-top: 261rpx;
}

.commend-title {
  height:140rpx;
  width: 510rpx;
  z-index: -1;
  position: relative;
}
.commend-title-storyname{
  position: absolute;
  top: 32rpx;
  left: 132rpx;
  font-size: 64rpx;
  width: 267rpx;
  text-align: center;
  font-family: "stylefont";
}
.commend-content{
  width: 700rpx;
  height: 880rpx;
  margin-left: 50rpx;
  position: relative;
  z-index: -1;
}
.commend-content-storydes{
  position: absolute;
  width: 520rpx;
  height: 590rpx;
  top: 109rpx;
  left: 100rpx;
  font-size: 37rpx;
  line-height: 60rpx;
  font-family: kaiti;
  font-weight: 560;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 10;
  text-indent:2em
}
.lookdetail{
position: absolute;
width: 233rpx;
height:48rpx;
left: 240rpx;
bottom: 105rpx;
background:#F2EADE;
text-align: center;
border-radius: 31rpx;
color:#918E8C;
font-size: 30rpx;
font-family: kaiti;
line-height: 48rpx;
}

.slide-image {
  width: 100%; 
  height:870rpx;
  position: relative;
  z-index: -1;
}

image.active {
  transform: none;
  transition: all 0.2s ease-in 0s;
} 

image.quiet {
  transform: scale(0.8333333);
  transition: all 0.2s ease-in 0s;
}
.fatherpl{
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}
/* 用户指南 */
.cover{
  background: rgba(0,0,0,0.3);
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
}
.inindex1{
  width: 400rpx;
  height: 300rpx;
  position: absolute;
  left: 300rpx;
  top: 200rpx;
}
.inindex2{
  width:350rpx;
  height: 250rpx;
  position: absolute;
  left:200rpx;
  bottom: 20rpx;
}
.iniknow{
  font-size: 56rpx;
  color: aliceblue;
  position: absolute;
  right: 20rpx;
  font-family:stylefont;
  bottom: 300rpx;
}